{% extends 'layouts/two-column.html.twig' %}

{% block title %}Course{% endblock %}

{% block content %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ course.author.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('course_delete', {'id': course.id}) }}">delete</a>
{% endblock %}
