{% extends 'layouts/two-column.html.twig' %}

{% block title %}ProjectPeople{% endblock %}

{% block content %}
    <h1>ProjectPeople</h1>
    <h2> Count: {{ project_peoples|length }} </h2>
    <table class="table">
        <thead>
            <tr>
                <th>â„–</th>
                <th>Type</th>
                <th>Person</th>
                <th>Project</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_person in project_peoples %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ project_person.type|e }}</td>
                <td>{{ project_person.person.fullName|e }}</td>
                <td>{{ project_person.project.title|e }}</td>
                <td>
                    <a href="{{ path('project_people_show', {'id': project_person.id}) }}">show</a>
                    <a href="{{ path('project_people_edit', {'id': project_person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_people_new') }}">Create new</a>
{% endblock %}
